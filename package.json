{
  "name": "slye",
  "productName": "slye",
  "author": "Parsa Ghadimi <qti3eqti3e@gmail.com>",
  "version": "0.0.0",
  "description": "Slye is an open-source 3D presentation software",
  "scripts": {
    "lint": "tslint --project .",
    "build": "rm -rf build && npm run build:main && npm run build:renderer && npm run build:assets",
    "build:renderer": "parcel build app/UI/app.html -d ./build/app/UI --public-url ./",
    "build:main": "tsc --outDir build --p './tsconfig.json'",
    "build:assets": "cp -r assets ./build/app",
    "start": "electron build/app/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Slye3D/slye.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Slye3D/slye/issues"
  },
  "keywords": [],
  "homepage": "https://github.com/Slye3D/slye#readme",
  "devDependencies": {
    "electron": "^1.8.2",
    "parcel-bundler": "^1.6.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "@types/three": "^0.91.3",
    "babel-polyfill": "^6.26.0",
    "node-sass": "^4.8.3",
    "three": "^0.91.0",
    "uuid": "^3.2.1"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  }
}
